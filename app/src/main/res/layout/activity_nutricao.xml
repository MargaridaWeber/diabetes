<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pc.diabetesfriend.NutricaoActivity">

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tabHost"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <ScrollView
                android:id="@+id/srcroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- title -->

                        <TextView
                            android:paddingTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textSize="16dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginBottom="4dp"
                            android:layout_alignParentBottom="true"
                            android:text="Pequeno-Almoço"
                            android:textColor="#000000"/>


                    <!--  divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#DADADC" ></View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pão(30gr) + Leite meio gordo/magro \nCereais integrais + café/chá sem açúcar ou com adoçante"
                        android:id="@+id/tvpequenoalmoco" />

                    <!-- title -->
                    <TextView
                        android:paddingTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="16dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginBottom="4dp"
                        android:layout_alignParentBottom="true"
                        android:text="Meio da manhã"
                        android:textColor="#000000"/>

                    <!--  divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#DADADC" ></View>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fruta média + bolachas de àgua e sal/integrais/maria \nIogurte magro + bolachas de àgua e sal/integrais/maria \n1/2 pão"
                        android:id="@+id/tvmanha" />


                    <!-- title -->
                    <TextView
                        android:paddingTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="16dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginBottom="4dp"
                        android:layout_alignParentBottom="true"
                        android:text="Almoço"
                        android:textColor="#000000"/>

                    <!--  divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#DADADC" ></View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prato de sopa \nCarne ou peixe (tamanho da palma da mão) \nBatata (tamanho de um ovo) ou colheres de sopa de arroz ou massa
\nFruta média \n(Saladas cruas ou legumes cozidos à vontade; tempero pouco azeite; Evitar os fritos)"
                        android:id="@+id/tvalmoco" />




                    <!-- title -->
                    <TextView
                        android:paddingTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="16dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginBottom="4dp"
                        android:layout_alignParentBottom="true"
                        android:text="Lanche (2 vezes)"
                        android:textColor="#000000"/>

                    <!--  divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#DADADC" ></View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pão + leite meio gordo/magro (café/chá sem açucar)\nIogurte magro + bolachas de àgua e sal/integrais/maria/tostadas
                        \nFruta média + bolachas de àgua e sal/integrais/maria/tostadas"
                        android:id="@+id/tvlanche" />


                    <!-- title -->
                    <TextView
                        android:paddingTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="16dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginBottom="4dp"
                        android:layout_alignParentBottom="true"
                        android:text="Jantar"
                        android:textColor="#000000"/>

                    <!--  divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#DADADC" ></View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Semelhante ao almoço mas em menor quantidade"
                        android:id="@+id/tvjantar" />


                    <!-- title -->
                    <TextView
                        android:paddingTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="16dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginBottom="4dp"
                        android:layout_alignParentBottom="true"
                        android:text="Ceia"
                        android:textColor="#000000"/>

                    <!--  divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#DADADC" ></View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pão + Leite meio gordo/magro (café/chá sem açucar)\nIogurte magro + bolachas de àgua e sal/integrais/maria/tostadas \nFruta média + bolachas de àgua e sal/integrais/maria/tostadas "
                        android:id="@+id/ceia" />

                </LinearLayout>

            </ScrollView>

                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"></LinearLayout>


            </FrameLayout>
        </LinearLayout>
    </TabHost>

</LinearLayout>
