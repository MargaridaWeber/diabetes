<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nutricao.AdicionarPlano"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- title -->

            <TextView
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="4dp"
                android:layout_alignParentBottom="true"
                android:text="Pequeno-Almoço"
                android:textColor="#000000"
                android:id="@+id/textView6" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etPeqAlmoco"
                android:layout_weight="0.05" />

            <TextView
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="4dp"
                android:layout_alignParentBottom="true"
                android:text="Meio da Manhã"
                android:textColor="#000000"
                android:id="@+id/textView10" />



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etMeioManha"
                android:layout_weight="0.05" />

            <!-- title -->

            <TextView
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="4dp"
                android:layout_alignParentBottom="true"
                android:text="Almoço"
                android:textColor="#000000"
                android:id="@+id/tvalmoco" />



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etAlmoco"
                android:layout_weight="0.05" />


            <TextView
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="4dp"
                android:layout_alignParentBottom="true"
                android:text="Lanche"
                android:textColor="#000000"
                android:id="@+id/tvlanche" />



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etLanche"
                android:layout_weight="0.05" />

            <TextView
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="4dp"
                android:layout_alignParentBottom="true"
                android:text="Jantar"
                android:textColor="#000000"
                android:id="@+id/tvjantar" />




            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etJantar"
                android:layout_weight="0.05" />

            <TextView
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="4dp"
                android:layout_alignParentBottom="true"
                android:text="Ceia"
                android:textColor="#000000"
                android:id="@+id/tvCeia" />



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etCeia"
                android:layout_weight="0.05" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adicionar o meu plano"
                android:id="@+id/btnAdicionar"
                android:layout_gravity="right" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
