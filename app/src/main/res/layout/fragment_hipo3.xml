<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView7"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="dicas.FragmentHipo3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Como agir?"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:id="@+id/textView37"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:textSize="12dp"
        android:text="Ingerir 15 a 20 gramas de açúcar (1,2 pacotes de açúcar) ou 150ml refrigerante com 1 pacote e meio de açúcar adicionado"
        android:id="@+id/textView38"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/textView37"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#477AAC"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Aguardar 15 minutos"
        android:textStyle="bold"
        android:id="@+id/textView43"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView4"
        android:src="@drawable/relogio"
        android:layout_below="@+id/textView38"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/se"           >

        <TextView
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Se menor que 70mg/dL"
            android:textStyle="bold"
            android:textColor="#477AAC"
            android:id="@+id/textView40"
            android:gravity="center_horizontal" />

        <TextView
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Se maior que 70 mg/dL"
        android:textColor="#477AAC"
        android:textStyle="bold"
        android:id="@+id/textView41"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">


            <TextView
            android:layout_width="136dp"
            android:layout_height="80dp"
            android:textSize="12dp"
            android:text="Ingerir 15 a 20 gramas de açúcar, novamente"
            android:id="@+id/textView39"
            android:gravity="center_horizontal"
            android:layout_below="@+id/textView40"
                android:layout_weight="0.10" />


            <TextView
            android:layout_width="136dp"
            android:layout_height="80dp"
            android:textSize="12dp"
            android:text="Ingerir alimentos (antecipar uma refeição ou fazer uma merenda)"
            android:id="@+id/textView42"
            android:gravity="center_horizontal"
            android:layout_below="@+id/textView41"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/textView39"
            android:layout_toRightOf="@+id/textView40"
            android:layout_toEndOf="@+id/textView40"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.05" />


        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Aguardar 15 minutos"
        android:textColor="#477AAC"
        android:textStyle="bold"
        android:id="@+id/textView44"
        android:layout_below="@+id/textView39"
        android:layout_alignLeft="@+id/textView43"
        android:layout_alignStart="@+id/textView43"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView5"
        android:src="@drawable/relogio"
        android:layout_below="@+id/textView42"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="12dp"
        android:text="Avalie novamente a glicemia, se persistir, contactar o médico"
        android:id="@+id/textView45"
        android:gravity="center_horizontal"
        android:layout_below="@+id/textView44"
        android:layout_centerHorizontal="true" />



</LinearLayout>
</ScrollView>