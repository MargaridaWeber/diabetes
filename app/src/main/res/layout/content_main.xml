<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pc.diabetesfriend.PrincipalActivity"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Seja bem vindo(a)"
        android:id="@+id/textView9"
        android:layout_gravity="right"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Estado glicemia"
            android:id="@+id/tvestado"
            android:paddingLeft="50dp"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp">



        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btnGlicemia"
            android:layout_gravity="center"
            android:textSize="13dip"
            android:drawablePadding="2dip"
            android:paddingLeft="43dip"
            android:paddingRight="43dip"
            android:singleLine="true"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_date"
            />


        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Graficos"
            android:id="@+id/btnGraficos"
            android:layout_above="@+id/button6"
            android:layout_toRightOf="@+id/button3"
            android:layout_toEndOf="@+id/button3" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Alarmes "
            android:id="@+id/btnAlarmes"
            android:layout_below="@+id/button3"
            android:layout_alignLeft="@+id/button3"
            android:layout_alignStart="@+id/button3"
            android:layout_gravity="center_vertical" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Ligação USB"
            android:id="@+id/button6"
            android:layout_alignTop="@+id/btnAlarmes"
            android:layout_toRightOf="@+id/btnAlarmes"
            android:layout_toEndOf="@+id/btnAlarmes" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Nutrição"
            android:id="@+id/btnNutricao"
            android:layout_below="@+id/button3"
            android:layout_alignLeft="@+id/button3"
            android:layout_alignStart="@+id/button3"
            android:layout_gravity="center_vertical" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="New Button"
            android:id="@+id/button8"
            android:layout_alignTop="@+id/btnAlarmes"
            android:layout_toRightOf="@+id/btnAlarmes"
            android:layout_toEndOf="@+id/btnAlarmes" />


    </LinearLayout>


</LinearLayout>