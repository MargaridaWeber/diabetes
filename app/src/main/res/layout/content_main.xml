<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pc.diabetesfriend.PrincipalActivity"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Seja bem vindo(a)"
        android:id="@+id/textView9"
        android:layout_gravity="right"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Estado glicemia"
            android:id="@+id/tvestado"
            android:paddingLeft="50dp"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp">

        <TableLayout
            android:layout_width = "201dp"
            android:layout_height = "wrap_content"
            android:orientation = "horizontal"
            android:stretchColumns = "*"  >
            <TableRow  android:layout_weight = "1"  >
                <RelativeLayout
                    android:layout_width = "100dp"
                    android:layout_height = "100dp"  >

                    <Button
                        android:id = "@+id/btnGlicemia"
                        android:layout_width = "100dp"
                        android:layout_height = "100dp"
                        android:layout_centerInParent = "true"
                        android:paddingTop = "70dp"
                        android:text="Glicemia"
                        android:textSize="12dp"
                         />

                    <ImageView
                        android:id = "@+id/main_icon_content_image_view"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_centerInParent = "true"
                        android:src = "@drawable/ic_glicemia_blue" />

                </RelativeLayout>

                <RelativeLayout  android:layout_width = "100dp"
                    android:layout_height = "100dp" >


                    <Button
                        android:id = "@+id/btnGraficos"
                        android:layout_width = "100dp"
                        android:layout_height = "100dp"
                        android:layout_centerInParent = "true"
                        android:paddingTop = "70dp"
                        android:text="Gráficos"
                        android:textSize="12dp"
                        />

                    <ImageView
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_centerInParent = "true"
                        android:src = "@drawable/ic_grafico_blue" />

                </RelativeLayout>


            </TableRow>
        </TableLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TableLayout
            android:layout_width = "201dp"
            android:layout_height = "wrap_content"
            android:orientation = "horizontal"
            android:stretchColumns = "*"  >
        <TableRow  android:layout_weight = "1"  >

            <RelativeLayout
            android:layout_width = "100dp"
            android:layout_height = "100dp"  >


                <Button
                    android:id = "@+id/btnAlarmes"
                    android:layout_width = "100dp"
                    android:layout_height = "100dp"
                    android:layout_centerInParent = "true"
                    android:paddingTop = "70dp"
                    android:text="Alarmes"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_centerInParent = "true"
                    android:src = "@drawable/ic_alarm_orange" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id = "@+id/btnUSB"
                android:layout_width = "100dp"
                android:layout_height = "100dp"
                android:layout_centerInParent = "true"
                android:paddingTop = "70dp"
                android:text="Ligação USB"
                android:textSize="12dp" />

            <ImageView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_centerInParent = "true"
                android:src = "@drawable/ic_usb_orange" />

        </RelativeLayout>

        </TableRow>
        </TableLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TableLayout
            android:layout_width = "201dp"
            android:layout_height = "wrap_content"
            android:orientation = "horizontal"
            android:stretchColumns = "*"  >
        <TableRow  android:layout_weight = "1"  >
        <RelativeLayout
            android:layout_width = "100dp"
            android:layout_height = "100dp"  >

            <Button
                android:id = "@+id/btnNutricao"
                android:layout_width = "100dp"
                android:layout_height = "100dp"
                android:layout_centerInParent = "true"
                android:paddingTop = "70dp"
                android:text="Nutrição"
                android:textSize="12dp" />

            <ImageView
                android:layout_width = "48dp"
                android:layout_height = "48dp"
                android:layout_centerInParent = "true"
                android:src = "@drawable/ic_nutricao"
               />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent = "true"
            android:paddingTop = "70dp"
            android:text="Info"
            android:id="@+id/info"
            android:textSize="12dp"
            />

        <ImageView
            android:layout_width = "48dp"
            android:layout_height = "48dp"
            android:layout_centerInParent = "true"
            android:src = "@drawable/ic_info"
            />

        </RelativeLayout>

        </TableRow>
        </TableLayout>
    </LinearLayout>


</LinearLayout>