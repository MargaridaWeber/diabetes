<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView5"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dicas.FragmentInsulina2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Como aplicar?"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:id="@+id/textView100"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:text="Para que a administração de insulina seja eficaz é necessário:"
        android:id="@+id/textView113"
        android:layout_below="@+id/textView100"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="➤Administrá-la por via de injeçao subcutânea"
        android:id="@+id/textView114"
        android:layout_below="@+id/textView113"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="➤Fazer uma pequena prega na pele, antes de aplicar a injeção (é opcional)"
        android:id="@+id/textView115"
        android:layout_below="@+id/textView114"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="➤Escolher a agulha adequada juntamente com os profissionais de saúde"
        android:textSize="15dp"
        android:id="@+id/textView132"
        android:layout_below="@+id/textView115" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="➤Introduzir a agulha perpendicularmente à pele"
        android:id="@+id/textView116"
        android:layout_below="@+id/textView132"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="➤Esperar 10 a 15 segundos após aplicá-la e só depois retirar a agulha da pele"
        android:id="@+id/textView117"
        android:layout_below="@+id/textView116"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="➤Variar os locais das injeções, entre braço, coxa e barriga e mesmo nesses locais é importante rodar, para evitar hematomas e lipodistrofias."
        android:id="@+id/textView118"
        android:layout_below="@+id/textView117"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/imageView8"
        android:src="@drawable/aplicar"
        android:layout_below="@+id/textView118"
       />




</RelativeLayout>
</ScrollView>